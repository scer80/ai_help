{
  "name": "AI Help",
  "description": "Get help from AI.",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "16": "images/ai_help.icon.png",
    "32": "images/ai_help.icon.png",
    "48": "images/ai_help.icon.png",
    "128": "images/ai_help.icon.png"
  },
  "permissions": [
    "sidePanel",
    "contextMenus",
    "storage",
    "tabs",
    "tabGroups",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://claude.ai/*",
    "https://aistudio.google.com/*",
    "https://grok.com/*",
    "https://www.meta.ai/*",
    "https://www.perplexity.ai/*",
    "https://www.alphaxiv.org/*",
    "https://app.usefindr.com/*",
    "https://chat.deepseek.com/*",
    "https://chat.qwen.ai/*",
    "https://www.kimi.com/*",
    "https://chat.z.ai/*",
    "https://chat.mistral.ai/*"
  ],
  "action": {
    "default_title": "Open AI Help",
    "default_icon": {
      "16": "images/ai_help.icon.png",
      "32": "images/ai_help.icon.png",
      "48": "images/ai_help.icon.png",
      "128": "images/ai_help.icon.png"
    }
  },
  "side_panel": {
    "default_path": "popup/sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}

