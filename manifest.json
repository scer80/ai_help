{
  "name": "AI Help",
  "description": "Get help from AI.",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "16": "images/ai_help.icon.png",
    "32": "images/ai_help.icon.png",
    "48": "images/ai_help.icon.png",
    "128": "images/ai_help.icon.png"
  },
  "permissions": [
    "sidePanel",
    "contextMenus",
    "storage",
    "tabs",
    "tabGroups",
    "scripting"
  ],
  "host_permissions": [
    "https://chatgpt.com/*"
  ],
  "action": {
    "default_title": "Open AI Help",
    "default_icon": {
      "16": "images/ai_help.icon.png",
      "32": "images/ai_help.icon.png",
      "48": "images/ai_help.icon.png",
      "128": "images/ai_help.icon.png"
    }
  },
  "side_panel": {
    "default_path": "popup/sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}

